{
  "name": "english-aidol-platform",
  "private": true,
  "version": "1.0.3",
  "type": "module",
  "dependencies": {
    "@supabase/supabase-js": "^2.76.0",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "lovable-tagger": "^1.1.11",
    "vite": "^7.1.11"
  },
  "scripts": {
    "postinstall": "npm --prefix apps/main install",
    "dev": "npm --prefix apps/main run dev",
    "dev:main": "npm --prefix apps/main run dev",
    "dev:earthworm": "npm --prefix apps/earthworm run dev",
    "build": "npm --prefix apps/main run build",
    "build:main": "npm --prefix apps/main run build",
    "build:earthworm": "npm --prefix apps/earthworm run build",
    "build:dev": "npm --prefix apps/main run build:dev",
    "build:all": "npm run build:main && npm run build:earthworm",
    "preview": "npm --prefix apps/main run preview",
    "preview:earthworm": "npm --prefix apps/earthworm run preview",
    "docker:start": "docker compose up -d",
    "docker:stop": "docker compose stop",
    "docker:down": "docker compose down -v",
    "deploy:production": "npm run build:all && echo 'Build complete! Ready for production deployment.'",
    "start:production": "pm2 start ecosystem.config.js && pm2 save"
  },
  "devDependencies": {
    "lint-staged": "^15.5.2",
    "pnpm": "^8.0.0"
  }
}
